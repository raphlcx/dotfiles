# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  interval = 1
  separator = ""
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
  separator_block_width = 20
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip"
  format_down = "E: down"
  separator_block_width = 20
}

battery all {
  format = "%status %percentage"
  separator_block_width = 20
}

volume master {
  format = "V: %volume"
  format_muted = "V: muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  separator_block_width = 20
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
