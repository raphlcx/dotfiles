# This is Git's per-user configuration file.
[alias]
	a = add
	b = branch
	bb = branch --show-current
	c = commit
	ck = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	l = log
	lo = log --oneline
	p = push
	r = rebase
	ri = rebase -i
	s = status --short --branch
	sw = show
	can = commit --amend --no-edit
[push]
	default = simple
[commit]
	gpgsign = true
[core]
	editor = vim
[advice]
	pushUpdateRejected = false
	statusHints = false
	commitBeforeMerge = false
	resolveConflict = false
	detachedHead = false
	addEmptyPathspec = false
	skippedCherryPicks = false
[rebase]
	autoSquash = true
	autoStash = true
[fetch]
	prune = true
[user]
	useConfigOnly = true
	name = Ling Cong Xiang
[pull]
	ff = only
[tag]
	gpgSign = true
[init]
	defaultBranch = main
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
