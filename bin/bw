#!/usr/bin/env bash

# System upgrade script

echo ""
echo "======================================"
echo "   brew and cask"
echo "======================================"
echo ""

brew update && brew upgrade
brew autoremove
brew cleanup --prune=all -s --prune-prefix

echo ""
echo "======================================"
echo "   tldr local cache"
echo "======================================"
echo ""

tldr -u

echo ""
echo "======================================"
echo "   vim plugins"
echo "======================================"
echo ""

git -C "$HOME/.local/share/vim/pack/plugins" submodule foreach git pull
